{
    "comments": {
        "lineComment": "#",
        "blockComment": ["#[[", "#]]"]
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["${", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["${", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"\"\"", "\"\"\""],
        ["'''", "'''"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["${", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"\"\"", "\"\"\""],
        ["\"", "\""],
        ["'''", "'''"],
        ["'", "'"]
    ],
    // Indent after certain keywords
    "indentationRules": {
        "increaseIndentPattern": "\\b(do|then|else)\\s*$|\\bsubroutine[ \\t]+[^'\"\\$\\{\\} \\t]+$",
        "decreaseIndentPattern": "^\\s*(end|else|elif)\\s*$"
    }
}
